@model SuperoTarefas.Models.TarefasUrgencia

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    }

    <p></p>
    <div style="font-size: 20px; color: dodgerblue">
        Editar Urgência
    </div>
    <p></p>

    <div class="form-horizontal">

        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.Id, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id, new { htmlAttributes = new { disabled = "disabled", @readonly = "readonly", @class = "form-control" } })
            </div>
        </div>

        @*<div class="form-group">
                @Html.LabelFor(model => model.NivelUrgencia, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.NivelUrgencia, listItems, htmlAttributes: new { @class = "form-control" })
                </div>
            </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.Urgencia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Urgencia,  new { @maxlength = "30", @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success btn-lg" />
            </div>
        </div>
        <div class="alert-danger danger">
            @ViewBag.SaveUnsucess
        </div>
        <p></p>
    </div>
}

<div>
    @*@Html.ActionLink("Voltar", "Index")*@
    <input type="button" class="btn btn-primary btn-sm" value="Voltar" onclick="location.href='@Url.Action("Index", "TarefasUrgencia")'" />
</div>


