        <div class="form-group">
            @Html.LabelFor(model => model.Urgencia, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Urgencia,  new { @maxlength = "30", @class = "form-control" })

