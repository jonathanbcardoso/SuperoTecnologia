<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="https://www.supero.com.br" title="Supero" class="navbar-brand">
                    <img alt="Supero" src="@Url.Content("/image/supero_logo.png")" style="margin-top:-10px; margin-left: 0; width:65px">
                </a>
            </div>
            <ul class="nav navbar-nav">

                <li>
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> Tarefas <span class="caret"></span> </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Tarefas", "Index", "Tarefas")</li>
                        <li>@Html.ActionLink("Cadastro Status", "Index", "TarefasStatus")</li>
                        <li>@Html.ActionLink("Cadastro Urgência", "Index", "TarefasUrgencia")</li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Supero Tecnologia com Inteligência.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
